<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterPengajar"
    android:orientation="vertical"
    android:gravity="bottom"
    android:background="@color/colorbg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="@drawable/bg_putih"
        android:gravity="top|center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textPelajar"
            style="@style/textlogin"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:text="Tambah Pengajar"
            android:textSize="40px"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layname"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/editext_nama"
                    style="@style/EditTextLogin"
                    android:hint="Nama" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layemail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">
                <EditText
                    android:id="@+id/editext_email"
                    style="@style/EditTextLogin"
                    android:inputType="textEmailAddress"
                    android:hint="Email" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layalamat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">
                <EditText
                    android:id="@+id/editext_alamat"
                    style="@style/EditTextLogin"
                    android:hint="Alamat" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/laynohp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">
                <EditText
                    android:id="@+id/editext_nohp"
                    style="@style/EditTextLogin"
                    android:inputType="number"
                    android:hint="Nomor Handphone" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layNoKelPeng"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">
            <EditText
                android:id="@+id/editext_NoKelPeng"
                style="@style/EditTextLogin"
                android:inputType="number"
                android:hint="Nomor Kelompok"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/laypassreg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="5dp">
                <EditText
                    android:id="@+id/editext_pass"
                    style="@style/EditTextLogin"
                    android:inputType="textPassword"
                    android:hint="Password" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/laykonpassreg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="5dp">
                <EditText
                    android:id="@+id/editext_konpass"
                    style="@style/EditTextLogin"
                    android:hint="Konfirmasi Password"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <Button
                android:id="@+id/btnRegister"
                style="@style/ButtonLogin"
                android:layout_marginBottom="15px"
                android:layout_marginTop="11dp"
                android:padding="6dp"
                android:text="Daftar" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>